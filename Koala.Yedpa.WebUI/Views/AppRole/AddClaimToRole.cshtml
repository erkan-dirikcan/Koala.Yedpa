@model Koala.Yedpa.Core.Models.ViewModels.AddClaimToRoleViewModel
@{
    ViewData["Title"] = "AddClaimToRole";
    var RoleInfo = ViewData["RoleInfo"]!.ToString()!;
    var rolleClaims = (List<Koala.Yedpa.Core.Dtos.SelectListDto<string>>)TempData["Claims"]!;
    ViewData["Title"] = "AddClaimToRole";
}

<div class="d-flex flex-column-fluid">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card card-custom">
                    <div class="card-header flex-wrap border-0 pt-6 pb-0">
                        <div class="card-title">
                            <h3 class="card-label">
                                @RoleInfo
                                <span class="d-block text-muted pt-2 font-size-sm">Rol Yetkilendirme Bölümü</span>
                            </h3>
                        </div>
                    </div>
                    <div class="card-body">
                        <form asp-action="AddClaimToRole" asp-controller="AppRole" method="post">
                            @Html.HiddenFor(x=>x.RoleId)
                            <div classaction="row">
                                <select id="Claims" name="Claims" class="dual-listbox" multiple="multiple">

                                    @foreach (var item in rolleClaims)
                                    {
                                        if (item.IsSelected)
                                        {
                                            <option value="@item.Val" selected="selected">@item.Key</option>
                                        }
                                        else
                                        {
                                            <option value="@item.Val">@item.Key</option>
                                        }
                                    }
                                </select>
                            </div>

                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                                <a asp-controller="AppRole" asp-action="Index" class="btn btn-secondary">Vazgeç</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    <script src="~/assets/js/custom/ClaimList.js"></script>
}


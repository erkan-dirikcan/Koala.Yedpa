@model List<Koala.Yedpa.Core.Models.ViewModels.WorkplaceListViewModel>

@{
    ViewData["Title"] = "İşyerleri";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">İşyerleri Listesi</h3>
                </div>
                <div class="card-body">
                    <table id="workplaceTable" class="table table-bordered table-sm table-striped table-hover">
                        <thead>
                            <tr>
                                <th>İşyeri Kodu</th>
                                <th>İşyeri Adı</th>
                                <th>Cari Kodu</th>
                                <th>Cari Adı</th>
                                <th>Müşteri Tipi</th>
                                <th>Başlangıç Tarihi</th>
                                <th>Bitiş Tarihi</th>
                                <th>Toplam Net m²</th>
                                <th>Toplam Yakıt m²</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Code</td>
                                        <td>@item.Definition</td>
                                        <td>@item.ClCode</td>
                                        <td>@item.ClDefinition</td>
                                        <td>@(item.CustomerType?.ToString() ?? "")</td>
                                        <td>@(item.BegDate?.ToString("dd.MM.yyyy") ?? "")</td>
                                        <td>@(item.EndDate?.ToString("dd.MM.yyyy") ?? "")</td>
                                        <td>@(item.TotalNetMetre?.ToString("F2") ?? "")</td>
                                        <td>@(item.TotalFuelMetre?.ToString("F2") ?? "")</td>
                                        <td>
                                            <a href="/Workplace/Detail/@item.Id" class="btn btn-icon btn-sm btn-info">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/assets/js/custom/workplace-list-page.js"></script>
}

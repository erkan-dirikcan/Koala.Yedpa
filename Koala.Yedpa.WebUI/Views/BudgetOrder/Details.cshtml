@using Koala.Yedpa.Core.Dtos
@using Koala.Yedpa.Core.Models
@model Koala.Yedpa.Core.Models.ViewModels.BudgetOrderDetailsViewModel

@{
    ViewData["Title"] = "Bütçe Sipariş Detayı";
    Layout = "~/Views/Shared/_Layout.cshtml";

    // İstatistikleri hesapla
    var totalCount = Model.DuesStatistics?.Count ?? 0;
    var completedCount = Model.DuesStatistics?.Count(d => d.TransferStatus == TransferStatusEnum.Completed) ?? 0;
    var failedCount = Model.DuesStatistics?.Count(d => d.TransferStatus == TransferStatusEnum.Failed) ?? 0;
    var pendingCount = Model.DuesStatistics?.Count(d => d.TransferStatus == TransferStatusEnum.Pending) ?? 0;
    var pendingItems = Model.DuesStatistics?.Where(d => d.TransferStatus != TransferStatusEnum.Completed).ToList() ?? new List<DuesStatistic>();
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Bütçe Sipariş Detayı</h3>
                    <div class="card-tools">
                        <a href="/BudgetOrder/Index" class="btn btn-tool btn-sm">
                            <i class="fas fa-arrow-left"></i> Listeye Dön
                        </a>
                    </div>
                </div>
                <div class="card-body">

                    <!-- Bütçe Bilgileri -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h5 class="mb-3">Bütçe Bilgileri</h5>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Yıl</label>
                                <input type="text" class="form-control" value="@Model.Year" readonly />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Bütçe Türü</label>
                                <input type="text" class="form-control" value="@Model.BuggetTypeText" readonly />
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Oran (%)</label>
                                <input type="text" class="form-control" value="@((Model.Ratio * 100).ToString("F2"))" readonly />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Toplam Bütçe</label>
                                <input type="text" class="form-control" value="@Model.TotalBugget.ToString("F2") TL" readonly />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Açıklama</label>
                                <input type="text" class="form-control" value="@(Model.Description ?? "")" readonly />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Aylar</label>
                                <div class="form-control">
                                    @if (Model.BuggetRatioMounths != null && Model.BuggetRatioMounths != 0)
                                    {
                                        var months = new List<string>();
                                        if ((Model.BuggetRatioMounths & BuggetRatioMounthEnum.January) != 0) months.Add("Ocak");
                                        if ((Model.BuggetRatioMounths & BuggetRatioMounthEnum.February) != 0) months.Add("Şubat");
                                        if ((Model.BuggetRatioMounths & BuggetRatioMounthEnum.March) != 0) months.Add("Mart");
                                        if ((Model.BuggetRatioMounths & BuggetRatioMounthEnum.April) != 0) months.Add("Nisan");
                                        if ((Model.BuggetRatioMounths & BuggetRatioMounthEnum.May) != 0) months.Add("Mayıs");
                                        if ((Model.BuggetRatioMounths & BuggetRatioMounthEnum.June) != 0) months.Add("Haziran");
                                        if ((Model.BuggetRatioMounths & BuggetRatioMounthEnum.July) != 0) months.Add("Temmuz");
                                        if ((Model.BuggetRatioMounths & BuggetRatioMounthEnum.August) != 0) months.Add("Ağustos");
                                        if ((Model.BuggetRatioMounths & BuggetRatioMounthEnum.September) != 0) months.Add("Eylül");
                                        if ((Model.BuggetRatioMounths & BuggetRatioMounthEnum.October) != 0) months.Add("Ekim");
                                        if ((Model.BuggetRatioMounths & BuggetRatioMounthEnum.November) != 0) months.Add("Kasım");
                                        if ((Model.BuggetRatioMounths & BuggetRatioMounthEnum.December) != 0) months.Add("Aralık");

                                        @string.Join(", ", months)
                                    }
                                    else
                                    {
                                        <span>Tüm aylar seçili değil</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Aktarım İstatistikleri -->
                    <div class="row mt-4 mb-4">
                        <div class="col-12">
                            <h5 class="mb-3">Aktarım Durumu</h5>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-3">
                            <div class="card card-stats bg-light-primary">
                                <div class="card-body">
                                    <div class="text-center">
                                        <h3 class="text-primary">@totalCount</h3>
                                        <p class="text-muted">Toplam Kayıt</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card card-stats bg-light-success">
                                <div class="card-body">
                                    <div class="text-center">
                                        <h3 class="text-success">@completedCount</h3>
                                        <p class="text-muted">Aktarılan</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card card-stats bg-light-danger">
                                <div class="card-body">
                                    <div class="text-center">
                                        <h3 class="text-danger">@failedCount</h3>
                                        <p class="text-muted">Başarısız</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card card-stats bg-light-warning">
                                <div class="card-body">
                                    <div class="text-center">
                                        <h3 class="text-warning">@pendingCount</h3>
                                        <p class="text-muted">Bekleyen</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Aktarılmamış Kayıtlar İçin Toplu Aktarım Butonu -->
                    @if (pendingItems.Any())
                    {
                        <div class="alert alert-warning" role="alert">
                            <h4 class="alert-heading"><i class="fas fa-exclamation-triangle"></i> Aktarılmamış Kayıtlar Mevcut</h4>
                            <p>@pendingItems.Count adet kayıt Logo Tiger'a aktarılmamıştır.</p>
                            <button id="retryAllBtn" class="btn btn-primary" data-budgetratio-id="@Model.Id">
                                <i class="fas fa-redo"></i> Tüm Aktarılmamış Kayıtları Yeniden Aktar
                            </button>
                        </div>
                    }

                    @if (Model.DuesStatistics != null && Model.DuesStatistics.Any())
                    {
                        <div class="row mt-4">
                            <div class="col-12">
                                <h5 class="mb-3">Aidat Bilgileri</h5>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <div class="table-responsive">
                                    <table id="duesStatisticsTable" class="table table-bordered table-striped table-sm w-100">
                                        <thead>
                                            <tr>
                                                <th></th>
                                                <th>İşyeri Kodu</th>
                                                <th>İşyeri Adı</th>
                                                <th>Yıl</th>
                                                <th>Toplam</th>
                                                <th>Aktarım Durumu</th>
                                                <th>İşlem</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var dues in Model.DuesStatistics)
                                            {
                                                var isCompleted = dues.TransferStatus == TransferStatusEnum.Completed;
                                                var statusBadge = dues.TransferStatus switch
                                                {
                                                    TransferStatusEnum.Completed => "<span class='badge badge-success'>Aktarıldı</span>",
                                                    TransferStatusEnum.Failed => "<span class='badge badge-danger'>Başarısız</span>",
                                                    TransferStatusEnum.Pending => "<span class='badge badge-warning'>Bekliyor</span>",
                                                    _ => "<span class='badge badge-secondary'>Bilinmiyor</span>"
                                                };
                                                <tr data-dues-id="@dues.Id"
                                                    data-code="@dues.Code"
                                                    data-div-name="@dues.DivName"
                                                    data-january="@dues.January.ToString("F2")"
                                                    data-february="@dues.February.ToString("F2")"
                                                    data-march="@dues.March.ToString("F2")"
                                                    data-april="@dues.April.ToString("F2")"
                                                    data-may="@dues.May.ToString("F2")"
                                                    data-june="@dues.June.ToString("F2")"
                                                    data-july="@dues.July.ToString("F2")"
                                                    data-august="@dues.August.ToString("F2")"
                                                    data-september="@dues.September.ToString("F2")"
                                                    data-october="@dues.October.ToString("F2")"
                                                    data-november="@dues.November.ToString("F2")"
                                                    data-december="@dues.December.ToString("F2")"
                                                    data-budgetratio-id="@Model.Id"
                                                    data-is-completed="@isCompleted.ToString().ToLower()">
                                                    <td class="details-control"></td>
                                                    <td>@dues.DivCode</td>
                                                    <td>@dues.DivName</td>
                                                    <td>@dues.Year</td>
                                                    <td class="text-end">@dues.Total.ToString("F2")</td>
                                                    <td>@Html.Raw(statusBadge)</td>
                                                    <td>
                                                        @if (!isCompleted)
                                                        {
                                                            <button class="btn btn-sm btn-success btn-retry-single"
                                                                    data-id="@dues.Id"
                                                                    data-code="@dues.Code"
                                                                    data-budgetratio-id="@Model.Id"
                                                                    title="Yeniden Aktar">
                                                                <i class="ki ki-arrow-next"></i> Aktar
                                                            </button>
                                                        }
                                                        else
                                                        {
                                                            <span class="text-muted">
                                                                <i class="ki ki-check"></i> Tamamlandı
                                                            </span>
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info mt-3">
                            <i class="fas fa-info-circle"></i> Bu kayda ait aidat bilgisi bulunmuyor.
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/custom/budget-order-details-page.js"></script>
}

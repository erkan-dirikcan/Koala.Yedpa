@{
    ViewData["Title"] = "Bütçe ve Sipariş Yönetimi";
    ViewData["ActivePage"] = "BudgetOrderList";
    ViewData["MenuToggle"] = "Site";
}

<div class="d-flex flex-column-fluid">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card card-custom">
                    <div class="card-header flex-wrap border-0 pt-6 pb-0">
                        <div class="card-title">
                            <h3 class="card-label">
                                Bütçe Yönetimi
                                <span class="d-block text-muted pt-2 font-size-sm">Bütçe ve Sipariş Oluşturma</span>
                            </h3>
                        </div>
                        <div class="card-toolbar">
                            <a asp-action="Create" asp-controller="BudgetOrder" class="btn btn-primary font-weight-bolder">
                                <span class="svg-icon svg-icon-md">
                                    <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                                        <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                            <rect x="0" y="0" width="24" height="24" />
                                            <circle fill="#000000" cx="9" cy="15" r="6" />
                                            <path d="M8.8012943,7.00241953 C9.83837775,5.20768121 11.7781543,4 14,4 C17.3137085,4 20,6.6862915 20,10 C20,12.2218457 18.7923188,14.1616223 16.9975805,15.1987057 C16.9991904,15.1326658 17,15.0664274 17,15 C17,10.581722 13.418278,7 9,7 C8.93357256,7 8.86733422,7.00080962 8.8012943,7.00241953 Z" fill="#000000" opacity="0.3" />
                                        </g>
                                    </svg>
                                </span>
                                Yeni Bütçe Oluştur
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-info" role="alert">
                            <strong>Bilgi:</strong> Buradan bütçe ve sipariş oluşturabilirsiniz.
                            <ul>
                                <li>Kaynak yıl verilerini baz alarak hedef yıl bütçesi oluşturun</li>
                                <li>Seçtiğiniz aylara göre dağıtım yapılır</li>
                                <li>Logo Tiger'a otomatik sipariş gönderimi</li>
                            </ul>
                        </div>

                        <table class="table table-bordered table-hover" id="BudgetOrderTable" style="margin-top: 13px !important">
                            <thead>
                                <tr>
                                    <th>Hedef Yıl</th>
                                    <th>Bütçe Türü</th>
                                    <th>Toplam Tutar</th>
                                    <th>Oluşturma Tarihi</th>
                                    <th>Durum</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Veriler AJAX ile doldurulacak -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/assets/js/custom/budget-order-list-page.js"></script>
}

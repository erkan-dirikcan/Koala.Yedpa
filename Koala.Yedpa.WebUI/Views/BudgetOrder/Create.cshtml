@model Koala.Yedpa.Core.Models.ViewModels.CreateBudgetOrderViewModel
@{
    ViewData["Title"] = "Yeni Bütçe Oluştur";
    ViewData["ActivePage"] = "CreateBudgetOrder";
    ViewData["MenuToggle"] = "Site";
}

<!-- DataTables Buttons CSS -->
<link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.4.1/css/buttons.dataTables.min.css" />
<style>
    .dt-buttons {
        margin-bottom: 10px;
    }
    .dt-buttons .btn {
        margin-right: 5px;
    }
</style>

<div class="d-flex flex-column-fluid">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
            <div class="card card-custom">
                    <form id="createBudgetForm" class="form">
                    <div class="card-header flex-wrap border-0 pt-6 pb-0">
                        <div class="card-title">
                            <h3 class="card-label">
                                Yeni Bütçe Oluştur
                                <span class="d-block text-muted pt-2 font-size-sm">Kaynak yıl verilerine göre yeni yıl bütçesi oluşturun</span>
                            </h3>
                        </div>
                        <div class="card-toolbar">
                            <a asp-action="Index" asp-controller="BudgetOrder" class="btn btn-secondary">
                                <i class="ki ki-arrow-back"></i> Geri Dön
                            </a>
                        </div>
                    </div>

                <div class="card-body">
                
                <!-- Bütçe Türü Seçimi -->
                <div class="form-group row">
                    <label class="col-form-label col-lg-2">Bütçe Türü <span class="text-danger">*</span></label>
                    <div class="col-lg-4">
                        <div class="radio-list">
                            <label class="radio radio-outline radio-success">
                                <input type="radio" name="budgetType" value="1" checked />
                                <span></span>
                                <div class="radio-content">
                                    <h6 class="font-weight-bold">Bütçe</h6>
                                    <p class="mb-0 text-muted">Hedef yıl girebilirsiniz</p>
                                </div>
                            </label>
                            <label class="radio radio-outline radio-warning">
                                <input type="radio" name="budgetType" value="2" />
                                <span></span>
                                <div class="radio-content">
                                    <h6 class="font-weight-bold">Ek Bütçe</h6>
                                    <p class="mb-0 text-muted">Hedef yıl pasif, kaynak yıl üzerine eklenir</p>
                                </div>
                            </label>
                        </div>
                    </div>
                    <!-- Oran veya Toplam Bütçe -->
                    <label class="col-form-label col-lg-2">Hesaplama Türü <span class="text-danger">*</span></label>
                    <div class="col-lg-4">
                        <div class="radio-list">
                            <label class="radio radio-outline radio-success">
                                <input type="radio" name="calculationType" value="ratio" id="ratioRadio"  checked />
                                <span></span>
                                <div class="radio-content">
                                    <h6 class="font-weight-bold">Bütçe Oranı</h6>
                                    <p class="mb-0 text-muted">Girilen Orana Göre Hesaplama Yapılır</p>
                                </div>
                            </label>
                            <label class="radio radio-outline radio-warning">
                                <input type="radio" name="calculationType" value="amount" id="amountRadio" />
                                <span></span>
                                <div class="radio-content">
                                    <h6 class="font-weight-bold">Toplam Bütçe</h6>
                                    <p class="mb-0 text-muted">Gerilan Toplam Bütçeye Göre Hesaplama Yapılır.</p>
                                </div>
                            </label>
                        </div>
                    </div>
                               

                </div>

                <!-- 3 Kolon: Hedef Yıl | Kaynak Yıl | Oran/Toplam Bütçe -->
                <div class="form-group row">
                    <!--Oran/Toplam Bütçe-->
                    <div class="col-lg-12">
                        <div class="row">
                            <!-- Hedef Yıl -->
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label>Hedef Yıl</label>
                                    <input type="number" name="targetYear" id="targetYear" class="form-control" placeholder="2026" min="2024" max="2100" required />
                                    <span class="form-text text-muted">Bütçe oluşturulacak yıl</span>
                                </div>
                            </div>

                            <div class="col-lg-4">
                                <!-- Oran Input -->
                                <div  id="ratioInputSection">
                                    <div class="form-group">
                                        <label>Oran (%)</label>
                                        <div class="input-group">
                                            <input type="number" class="form-control" id="newRatioPercent" step="1" min="-100" max="1000" placeholder="25"/>
                                            <div class="input-group-append">
                                                <span class="input-group-text">%</span>
                                            </div>
                                        </div>
                                        <span class="form-text text-muted">Örn: 25 = %25 artış</span>
                                    </div>
                                </div>
                                <!-- Toplam Bütçe Input -->
                                <div id="amountInputSection" style="display:none;">
                                    <div class="form-group">
                                        <label>Toplam Bütçe (TL)</label>
                                        <div class="input-group">
                                            <input type="number" class="form-control" id="newBudget" step="0.01" min="0" placeholder="135770811" />
                                            <div class="input-group-append">
                                                <span class="input-group-text">₺</span>
                                            </div>
                                        </div>
                                        <span class="form-text text-muted">Toplam hedef bütçe</span>
                                    </div>
                                </div>
                            </div>
                            <!-- Kaynak Yıl -->
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label>Kaynak Yıl</label>
                                    <select name="sourceYear" id="sourceYear" class="form-control" required>
                                        <option value="">Seçiniz...</option>
                                    </select>
                                    <span class="form-text text-muted">Bütçe hesaplanacak kaynak yıl</span>
                                    <div id="sourceYearLoading" style="display: none;" class="mt-2">
                                        <div class="spinner-border spinner-border-sm text-primary" role="status">
                                            <span class="sr-only">Yükleniyor...</span>
                                        </div>
                                        <span class="ml-2 text-muted">Yükleniyor...</span>
                                    </div>
                                </div>
                            </div>

                                       
                        </div>
                    </div>
                </div>



                <!-- Aylar Seçimi -->
                <div class="form-group row" id="monthsSelectionSection" style="display:none;">
                    <label class="col-form-label col-lg-2">Aylar <span class="text-danger">*</span></label>
                    <div class="col-lg-10">
                        <div class="row">
                            <div class="col-xl-3">
                                <div class="checkbox-list">
                                    <label class="checkbox"><input type="checkbox" class="month-checkbox" value="1" checked="checked" /><span></span>Ocak</label>
                                    <label class="checkbox"><input type="checkbox" class="month-checkbox" value="2" checked="checked" /><span></span>Şubat</label>
                                    <label class="checkbox"><input type="checkbox" class="month-checkbox" value="4" checked="checked" /><span></span>Mart</label>
                                    <label class="checkbox"><input type="checkbox" class="month-checkbox" value="8" checked="checked" /><span></span>Nisan</label>
                                </div>
                            </div>
                            <div class="col-xl-3">
                                <div class="checkbox-list">
                                    <label class="checkbox"><input type="checkbox" class="month-checkbox" value="16" checked="checked" /><span></span>Mayıs</label>
                                    <label class="checkbox"><input type="checkbox" class="month-checkbox" value="32" checked="checked" /><span></span>Haziran</label>
                                    <label class="checkbox"><input type="checkbox" class="month-checkbox" value="64" checked="checked" /><span></span>Temmuz</label>
                                    <label class="checkbox"><input type="checkbox" class="month-checkbox" value="128" checked="checked" /><span></span>Ağustos</label>
                                </div>
                            </div>
                            <div class="col-xl-3">
                                <div class="checkbox-list">
                                    <label class="checkbox"><input type="checkbox" class="month-checkbox" value="256" checked="checked" /><span></span>Eylül</label>
                                    <label class="checkbox"><input type="checkbox" class="month-checkbox" value="512" checked="checked" /><span></span>Ekim</label>
                                    <label class="checkbox"><input type="checkbox" class="month-checkbox" value="1024" checked="checked" /><span></span>Kasım</label>
                                    <label class="checkbox"><input type="checkbox" class="month-checkbox" value="2048" checked="checked" /><span></span>Aralık</label>
                                </div>
                            </div>
                            <div class="col-xl-3">
                                <button type="button" class="btn btn-sm btn-light-primary" id="selectAllMonths">
                                    <i class="ki ki-check"></i> Tümünü Seç
                                </button>
                                <button type="button" class="btn btn-sm btn-light-secondary ml-2" id="deselectAllMonths">
                                    <i class="ki ki-close"></i> Seçimi Kaldır
                                </button>
                            </div>
                        </div>
                        <span class="form-text text-muted">Seçilen aylara oran uygulanacak</span>
                    </div>
                </div>

                <!-- Hesapla Butonu -->
                <div class="form-group row" id="calculateSection" style="display:none;">
                    <div class="col-lg-2 offset-lg-10">
                        <button type="button" class="btn btn-info mr-2" id="calculateBtn">
                            <i class="ki ki-calculator"></i> Hesapla ve Dağıt
                        </button>
                        <span class="form-text text-muted ml-2">Seçilen yıla göre oran uygulanır</span>
                    </div>
                </div>

                <!-- Özet Bilgiler -->
                <div class="alert alert-primary" role="alert" id="oldBudgetSummary" style="display:none;">
                    <div class="d-flex align-items-center">
                        <div class="alert-icon"><i class="ki ki-information icon-md"></i></div>
                        <div class="alert-text">
                            <strong>Seçili Ayların Kaynak Yıl Toplamı: </strong>
                            <span id="oldBudgetTotal">0</span> TL
                        </div>
                    </div>
                </div>

                <div class="alert alert-success" role="alert" id="newBudgetSummary" style="display:none;">
                    <div class="d-flex align-items-center">
                        <div class="alert-icon"><i class="ki ki-check icon-md"></i></div>
                        <div class="alert-text">
                            <strong>Hesaplanan Yeni Toplam: </strong>
                            <span id="newBudgetTotal">0</span> TL
                            <span class="mx-2">|</span>
                            <strong>Uygulanan Oran: </strong>
                            <span id="appliedRatio">0</span>%
                        </div>
                    </div>
                </div>

                          

                <!-- DuesStatistics Tablosu -->
                <div class="form-group" id="duesStatisticSection" style="display:none;">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover" id="duesStatisticTable">
                            <thead>
                            <tr>
                                <th></th>
                                <th>Dükkan</th>
                                <th>Dükkan Kodu</th>
                                <th>Müşteri Kodu</th>
                                <th>Toplam</th>
                            </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                    <!-- Kaydet Butonu 
                    <div class="form-group row" id="saveSection" style="display:none;">
                        <div class="col-lg-2 offset-lg-10">
                           
                        </div>
                                </div>-->
                </div>
                
                </div>
                <div class="card-footer">
                    <button type="button" class="btn btn-primary mr-2" id="saveBtn">
                        <i class="ki ki-save"></i> Kaydet
                    </button>
                    <a asp-action="Index" asp-controller="BudgetOrder" class="btn btn-secondary">
                        <i class="ki ki-close"></i> İptal
                    </a>
                </div>
                </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <!-- JSZip for Excel export -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>
    <!-- DataTables Buttons -->
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.4.1/js/buttons.print.min.js"></script>

    <script src="~/assets/js/custom/budget-order-create-page.js?v=11"></script>
}

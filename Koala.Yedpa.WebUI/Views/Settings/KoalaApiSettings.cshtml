@model Koala.Yedpa.Core.Models.ViewModels.KoalaApiSettingsViewModel
@{
    ViewData["Title"] = "Koala API Ayarları";
    ViewData["ActivePage"] = "KoalaApiSettings";
    ViewData["MenuToggle"] = "Settings";
}


<div class="d-flex flex-column-fluid">

    <div class="container-fluid">

        <div class="row">

            <div class="col-lg-12">
                <form name="CreateModuleForm" id="CreateForm" asp-action="KoalaApiSettings" asp-controller="Settings" method="post">
                    @Html.AntiForgeryToken()
                    <div class="card card-custom card-stretch gutter-b">
                        <div class="card-header border-0 py-5">
                            <h3 class="card-title align-items-start flex-column">
                                <span class="card-label font-weight-bolder text-dark">Koala API Ayarları</span>
                                <span class="text-muted mt-3 font-weight-bold font-size-sm">Koala API Ayarlarını Güncelle</span>
                            </h3>
                        </div>
                        <div class="card-body pt-0 pb-3">
                            <div class="tab-content">
                                <div asp-validation-summary="ModelOnly"></div>
                                <div class="form-group row">
                                    <span class="text-danger col-md-2 col-form-label"><label asp-for="BaseUrl"></label> *</span>
                                    <div class="col-md-10">
                                        <input class="form-control form-control-sm" asp-for="BaseUrl" type="url" placeholder="https://api.example.com" />
                                        <span asp-validation-for="BaseUrl" class="text-danger"></span>
                                        <small class="form-text text-muted">API'nın temel URL adresini giriniz (örn: https://api.koala.com)</small>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <span class="text-danger col-md-2 col-form-label"><label asp-for="UserName"></label> *</span>
                                    <div class="col-md-4">
                                        <input class="form-control form-control-sm" asp-for="UserName" type="text" placeholder="API Kullanıcı Adı" />
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                    </div>
                                    <span class="text-danger col-md-2 col-form-label"><label asp-for="Password"></label> *</span>
                                    <div class="col-md-4">
                                        <input class="form-control form-control-sm" asp-for="Password" type="password" placeholder="API Parola" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-success mr-2">Ayarları Güncelle</button>
                            <a href="~/Dashboard" class="btn btn-secondary">Vazgeç</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>



    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

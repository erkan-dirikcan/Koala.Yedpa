@model Koala.Yedpa.Core.Models.ViewModels.EmailSettingViewModel
@{
    ViewData["Title"] = "E-Posta SMTP Ayarları";
    ViewData["ActivePage"] = "SmtpSettings";
    ViewData["MenuToggle"] = "Settings";
}


<div class="d-flex flex-column-fluid">

    <div class="container-fluid">

        <div class="row">

            <div class="col-lg-12">
                <form name="CreateModuleForm" id="CreateForm" asp-action="EmailSettings" asp-controller="Settings" method="post">
                    @Html.AntiForgeryToken()
                    <div class="card card-custom card-stretch gutter-b">
                        <div class="card-header border-0 py-5">
                            <h3 class="card-title align-items-start flex-column">
                                <span class="card-label font-weight-bolder text-dark">E-Posta Smtp Ayarları</span>
                                <span class="text-muted mt-3 font-weight-bold font-size-sm">Smtp Ayarlarını Güncelle</span>
                            </h3>
                        </div>
                        <div class="card-body pt-0 pb-3">
                            <div class="tab-content">
                                <div asp-validation-summary="ModelOnly"></div>
                                <div class="form-group row">
                                    <label asp-for="EnableSsl" class="col-1 col-form-label"></label>
                                    <div class="col-2">
                                        <span class="switch switch-outline switch-icon switch-success">
                                            <label>
                                                <input asp-for="EnableSsl" type="checkbox"/>
                                                <span></span>
                                            </label>
                                        </span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <span class="text-danger col-md-1 col-form-label"> <label asp-for="UserName" class=""></label> *</span>
                                    <div class="col-md-5">
                                        <input class="form-control form-control-sm" asp-for="UserName" type="text" />
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                    </div>
                                    <span class="text-danger col-md-1 col-form-label"><label asp-for="Password"></label> *</span>
                                    <div class="col-md-5">
                                        <input class="form-control form-control-sm" asp-for="Password" type="text" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                   
                                </div>
                                <div class="form-group row">
                                    <span class="text-danger col-md-1 col-form-label"><label asp-for="SmtpServer"></label> *</span>
                                    <div class="col-md-5">
                                        <input class="form-control form-control-sm" asp-for="SmtpServer" type="text" />
                                        <span asp-validation-for="SmtpServer" class="text-danger"></span>
                                    </div>
                                    <span class="text-danger col-md-1 col-form-label"><label asp-for="Port"></label> *</span>
                                    <div class="col-md-5">
                                        <input class="form-control form-control-sm" asp-for="Port" type="text" />
                                        <span asp-validation-for="Port" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    
                                    <span class="text-danger col-md-1 col-form-label"><label asp-for="SenderEmail"></label> *</span>
                                    <div class="col-md-5">
                                        <input class="form-control form-control-sm" asp-for="SenderEmail" type="text" />
                                        <span asp-validation-for="SenderEmail" class="text-danger"></span>
                                    </div>
                                    <span class="text-danger col-md-1 col-form-label"><label asp-for="SenderName"></label> *</span>
                                    <div class="col-md-5">
                                        <input class="form-control form-control-sm" asp-for="SenderName" type="text" />
                                        <span asp-validation-for="SenderName" class="text-danger"></span>
                                    </div>
                                   
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-success mr-2">Ayarları Güncelle</button>
                            <a href="~/Dashboard" class="btn btn-secondary">Vazgeç</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>




    </div>

</div>



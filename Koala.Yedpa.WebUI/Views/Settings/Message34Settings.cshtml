@model Koala.Yedpa.Core.Models.ViewModels.Message34SettingsViewModel
@{
    ViewData["Title"] = "Message34 API Ayarları";
    ViewData["ActivePage"] = "Message34Settings";
    ViewData["MenuToggle"] = "Settings";
}


<div class="d-flex flex-column-fluid">

    <div class="container-fluid">

        <div class="row">

            <div class="col-lg-12">
                <form name="CreateModuleForm" id="CreateForm" asp-action="Message34Settings" asp-controller="Settings" method="post">
                    @Html.AntiForgeryToken()
                    <div class="card card-custom card-stretch gutter-b">
                        <div class="card-header border-0 py-5">
                            <h3 class="card-title align-items-start flex-column">
                                <span class="card-label font-weight-bolder text-dark">Message34 API Ayarları</span>
                                <span class="text-muted mt-3 font-weight-bold font-size-sm">Message34 API Ayarlarını Güncelle</span>
                            </h3>
                        </div>
                        <div class="card-body pt-0 pb-3">
                            <div class="tab-content">
                                <div asp-validation-summary="ModelOnly"></div>
                                <div class="form-group row">
                                    <span class="text-danger col-md-1 col-form-label"><label asp-for="BaseApi"></label> *</span>
                                    <div class="col-md-5">
                                        <input class="form-control form-control-sm" asp-for="BaseApi" type="text" />
                                        <span asp-validation-for="BaseApi" class="text-danger"></span>
                                    </div>
                                    <span class="text-danger col-md-1 col-form-label"><label asp-for="UserName"></label> *</span>
                                    <div class="col-md-5">
                                        <input class="form-control form-control-sm" asp-for="UserName" type="text" />
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <span class="text-danger col-md-1 col-form-label"><label asp-for="Password"></label> *</span>
                                    <div class="col-md-5">
                                        <input class="form-control form-control-sm" asp-for="Password" type="password" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    <span class="col-md-1 col-form-label"><label asp-for="SendName"></label></span>
                                    <div class="col-md-5">
                                        <input class="form-control form-control-sm" asp-for="SendName" type="text" />
                                        <span asp-validation-for="SendName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <span class="col-md-1 col-form-label"><label asp-for="SendMail"></label></span>
                                    <div class="col-md-5">
                                        <input class="form-control form-control-sm" asp-for="SendMail" type="email" />
                                        <span asp-validation-for="SendMail" class="text-danger"></span>
                                    </div>
                                    <span class="col-md-1 col-form-label"><label asp-for="ReplyEmail"></label></span>
                                    <div class="col-md-5">
                                        <input class="form-control form-control-sm" asp-for="ReplyEmail" type="email" />
                                        <span asp-validation-for="ReplyEmail" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-success mr-2">Ayarları Güncelle</button>
                            <a href="~/Dashboard" class="btn btn-secondary">Vazgeç</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>



    </div>

</div>


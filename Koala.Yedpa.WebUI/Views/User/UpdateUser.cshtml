@model Koala.Yedpa.Core.Models.ViewModels.UpdateAppUserViewModel
@{
    ViewData["Title"] = "Kullanıcı Güncelle";
    ViewData["ActivePage"] = "UserList";
    ViewData["MenuToggle"] = "User";

    var avatar = $"/avatars/{(string)TempData["Avatar"]!}";
}


<div class="d-flex flex-column-fluid">

    <div class="container-fluid">

        <div class="row">
            <div class="col-lg-12">
                <form name="UpdateUserForm" id="UpdateUserForm" asp-action="UpdateUser" asp-controller="User" method="post" enctype="multipart/form-data">
                    <div class="card card-custom card-stretch gutter-b">
                        <div class="card-header border-0 py-5">
                            <h3 class="card-title align-items-start flex-column">
                                <span class="card-label font-weight-bolder text-dark">Kullanıcı Yönetimi</span>
                                <span class="text-muted mt-3 font-weight-bold font-size-sm">Yeni Kullanıcı Güncelle</span>
                            </h3>
                        </div>
                        <div class="card-body pt-0 pb-3">
                            <div class="tab-content">

                                <div asp-validation-summary="ModelOnly"></div>
                                @Html.HiddenFor(x=>x.Id)
                                @Html.HiddenFor(x=>x.Removed)
                                
                                <div class="form-group row">

                                    <div class="image-input image-input-outline" id="kt_image_4" style="background-image: url(/avatars/logo002.png)">
                                        <div class="image-input-wrapper" style="background-image: url(/avatars/@TempData["Avatar"])"></div>

                                        <label class="btn btn-xs btn-icon btn-circle btn-white btn-hover-text-primary btn-shadow" data-action="change" data-toggle="tooltip" title="" data-original-title="Change avatar">
                                            <i class="fa fa-pen icon-sm text-muted"></i>
                                            <input type="file" asp-for="Avatar" accept=".png, .jpg, .jpeg" />
                                            <input type="hidden" name="avatar_remove" />
                                        </label>

                                        <span class="btn btn-xs btn-icon btn-circle btn-white btn-hover-text-primary btn-shadow" data-action="cancel" data-toggle="tooltip" title="Cancel avatar">
                                            <i class="ki ki-bold-close icon-xs text-muted"></i>
                                        </span>

                                        <span class="btn btn-xs btn-icon btn-circle btn-white btn-hover-text-primary btn-shadow" data-action="remove" data-toggle="tooltip" title="Remove avatar">
                                            <i class="ki ki-bold-close icon-xs text-muted"></i>
                                        </span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label asp-for="FirstName" class="col-md-1 col-form-label"></label>
                                    <div class="col-md-3">
                                        <input class="form-control form-control-sm" asp-for="FirstName" type="text" />
                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                    </div>
                                    <label asp-for="MiddleName" class="col-md-1 col-form-label"></label>
                                    <div class="col-md-3">
                                        <input class="form-control form-control-sm" asp-for="MiddleName" type="text" />
                                        <span asp-validation-for="MiddleName" class="text-danger"></span>
                                    </div>
                                    <label asp-for="LastName" class="col-md-1 col-form-label"></label>
                                    <div class="col-md-3">
                                        <input class="form-control form-control-sm" asp-for="LastName" type="text" />
                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                    </div>

                                </div>

                                <div class="form-group row">
                                    <label asp-for="PhoneNumber" class="col-md-1 col-form-label"></label>
                                    <div class="col-md-3">
                                        <input class="form-control form-control-sm" type="text" asp-for="PhoneNumber" />
                                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                    </div>
                                </div>


                                
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-warning mr-2">Kullanıcı Güncelle</button>
                            <a href="~/User" class="btn btn-secondary">Vazgeç</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
@section Scripts
{
    <script src="~/assets/js/custom/update-user-page.js"></script>
}
@model List<Koala.Yedpa.Core.Models.ViewModels.AsignRoleToUserViewModel>
@{
    ViewData["Title"] = "Kullanıcıyı Role Ata";
    var UserInfo =(AppUserInfoViewModels) ViewData["UserInfo"];

    var infoMessage = TempData["InfoMessage"] == null ? "" : TempData["InfoMessage"].ToString();
    var errorMessage = TempData["ErrorMessage"] == null ? "" : TempData["ErrorMessage"].ToString();
    ViewData["ActivePage"] = "UserList";
    ViewData["MenuToggle"] = "User";
}


<div class="d-flex flex-column-fluid">

    <div class="container-fluid">

        <div class="row">

            <div class="col-lg-12">
                <form name="CreateUserForm" id="CreateUserForm" asp-action="AsignRoleToUser" asp-controller="User" asp-route-userId="@ViewBag.UserId" method="post">
                    <div class="card card-custom card-stretch gutter-b">
                        <div class="card-header border-0 py-5">
                            <h3 class="card-title align-items-start flex-column">
                                <span class="card-label font-weight-bolder text-dark">Kullanıcı Yönetimi</span>
                                <span class="text-muted mt-3 font-weight-bold font-size-sm">@UserInfo.FullName isimli Kullanıcı Rollerini Güncelle</span>
                            </h3>
                        </div>
                        <div class="card-body pt-0 pb-3">
                            <div class="tab-content">
                                <div class="alert alert-danger" role="alert" asp-validation-summary="ModelOnly"></div>




                                <table class="table table-bordered table-hover table-checkable" id="UserTable" style="margin-top: 13px !important">
                                    <thead>
                                        <tr>
                                            <th title="Fullname">Role Adı</th>
                                            <th title="Title">Role Açıklaması</th>
                                            <th title="Action">Atanmış mı?</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (var i = 0; i < Model.Count; i++)
                                        {

                                            <tr>
                                                <td>@Model[i].Name</td>
                                                <td>@Model[i].Description</td>
                                                <td>

                                                    <div class="col-3">
                                                        <span class="switch switch-outline switch-sm switch-icon switch-success">
                                                            <label>
                                                                <input type="checkbox" asp-for="@Model[i].IsExist" />
                                                                <span></span>
                                                            </label>
                                                        </span>
                                                    </div>
                                                </td>
                                            </tr>
                                            <input type="hidden" asp-for="@Model[i].Name" />
                                            <input type="hidden" asp-for="@Model[i].Id" />
                                        }
                                    </tbody>
                                </table>
                                <div class="card-footer">
                                    <button type="submit" class="btn btn-primary mr-2">Rol Güncelle</button>
                                    <a asp-controller="User" asp-action="Index" type="button" class="btn btn-secondary">Vazgeç</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>

</div>


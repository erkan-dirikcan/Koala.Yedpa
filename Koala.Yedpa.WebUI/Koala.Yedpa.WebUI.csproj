<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <ProjectGuid>{A28DEB8F-5322-48AB-8F79-648D03D8870B}</ProjectGuid>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
    <DocumentationFile>YedpaApi.xml</DocumentationFile>
    <NoWarn>$(NoWarn);1591</NoWarn>
    <DocumentationFileEncoding>UTF-8</DocumentationFileEncoding>
  </PropertyGroup>
  
  <PropertyGroup>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <Target Name="FixXmlEncoding" AfterTargets="GenerateDocumentationFile" Condition="'$(GenerateDocumentationFile)' == 'true' AND Exists('$(MSBuildProjectDirectory)\$(DocumentationFile)')">
    <PropertyGroup>
      <_XmlFilePath>$(MSBuildProjectDirectory)\$(DocumentationFile)</_XmlFilePath>
    </PropertyGroup>
    <Exec Command="powershell -NoProfile -ExecutionPolicy Bypass -Command &quot;$content = [System.IO.File]::ReadAllText('$(_XmlFilePath)', [System.Text.Encoding]::UTF8); $content = $content -replace '&lt;\?xml version=&quot;1.0&quot;\?&gt;', '&lt;\?xml version=&quot;1.0&quot; encoding=&quot;utf-8&quot;\?&gt;'; [System.IO.File]::WriteAllText('$(_XmlFilePath)', $content, [System.Text.Encoding]::UTF8)&quot;" ContinueOnError="false" />
  </Target>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <GenerateAssemblyInfo>True</GenerateAssemblyInfo>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <GenerateAssemblyInfo>True</GenerateAssemblyInfo>
  </PropertyGroup>



  <ItemGroup>
    <ProjectReference Include="..\Koala.Yedpa.Service\Koala.Yedpa.Service.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.VisualStudio.Web.CodeGeneration.Design" Version="10.0.0" />
    <PackageReference Include="NLog.Extensions.Logging" Version="6.1.1" />
    <PackageReference Include="NLog.Web.AspNetCore" Version="6.1.1" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="wwwroot\Licenses\" />
  </ItemGroup>

  <ItemGroup>
    <Content Update="nlog.config">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

</Project>
